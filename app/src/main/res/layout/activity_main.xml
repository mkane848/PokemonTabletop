<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/button_newsheet"
            android:id="@+id/new_sheet"
            android:layout_marginBottom="57dp"
            android:layout_above="@+id/load_sheet"
            android:layout_centerHorizontal="true"
            android:onClick="newSheet"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/button_loadsheet"
            android:layout_marginBottom="169dp"
            android:id="@+id/load_sheet"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="loadSheet"/>
</RelativeLayout>